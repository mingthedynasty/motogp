package com.season.classes.race.rideritem {

  import flash.events.*;

  /**********************
   * 
   * RiderItemEvent
   *
   **********************/
  public class RiderItemEvent extends Event {
    
    /**********************
     * VARIABLES      
     **********************/
    public var riderNumber:Number;

    /**********************
     * CONSTRUCTOR
     **********************/
    public function RiderItemEvent(type:String, num:Number, 
                                   bubbles:Boolean = false, cancelable:Boolean = false) {
      super(type, bubbles, cancelable);
      riderNumber = num;
    }     
  }
}
